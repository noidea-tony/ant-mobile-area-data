root = true
# 对所有文件应用下面的规则
[*]
# 采用空格缩进方式
indent_style = space
# 编码规则用utf-8
charset = utf-8
# 换行符格式
end_of_line = CRLF
# 缩进数量为2个空格
indent_size = 4
# 是否在文件的最后插入一个空行
insert_final_newline = true
# 是否删除行尾的空格
trim_trailing_whitespace = true
# Markdown文件不删除行尾的空格
[*.md]
max_line_length = off
trim_trailing_whitespace = false
